{% trans_default_domain 'BugTrackBundle' %}

{% macro commentsTable(comments) %}
    <table class="table table-hover">
        <thead> <tr>
            <th>{{ 'comment.created'|trans }}</th>
            <th>{{ 'comment.body'|trans }}</th>
            <th>{{ 'comment.actions'|trans }}</th>
        </tr></thead>
        <tbody>
        {% for comment in comments %}
            <tr>
                <td class="col-md-2">
                    <a href="{{ path('user_view', {'id': comment.author.id}) }}">{{ comment.author.fullName }}
                    </a>&nbsp;{{ comment.updated|date('Y-m-d H:i:s') }}
                </td>
                <td class="col-md-5">{{ comment.body|nl2br }}</td>
                <td class="col-md-2">
                    <a href="{{ path('comment_edit', {'id': comment.id}) }}" class="btn btn-default" role="button">
                        Edit
                    </a>
                    <a href="{{ path('comment_delete', {'id': comment.id}) }}" class="btn btn-default" role="button">
                        Delete
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endmacro %}

{% macro issuesTable(issues) %}
    <table class="table table-hover">
        <thead> <tr>
            <th>{{ 'issue.created'|trans }}</th>
            <th>{{ 'issue.body'|trans }}</th>
            <th>{{ 'issue.actions'|trans }}</th>
        </tr></thead>
        <tbody>
        {% for issue in issues %}
            <tr>
                <td class="col-md-2">
                    <a href="{{ path('user_view', {'id': issue.reporter.id}) }}">{{ issue.reporter.fullName }}
                    </a>&nbsp;{{ issue.updated|date('Y-m-d H:i:s') }}
                </td>
                <td class="col-md-5">{{ issue.getTitle }}</td>
                <td class="col-md-2">
                    <a href="{{ path('issue_view', {'id': issue.id}) }}" class="btn btn-default" role="button">
                        View
                    </a>
                    <a href="{{ path('issue_edit', {'id': issue.id}) }}" class="btn btn-default" role="button">
                        Edit
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endmacro %}
