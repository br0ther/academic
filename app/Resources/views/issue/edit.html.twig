{% extends "layout.html.twig" %}

{% block head_style %}
    {{ parent() }}
{% endblock %}

{% block title %}
    {{ pageTitle }}
{% endblock %}

{% block content %}
    {{ form_start(form) }}
    {{ form_widget(form) }}
    <div class="form-group">
        <div class="col-sm-3">
            <button type="submit" value="save" class="btn btn-info">Save</button>
            <a href="{{ (issue is defined) ? path('issue_view', {'id': issue.id}) : path('homepage')}}"
               class="btn btn-default" role="button">
                Cancel
            </a>
        </div>
    </div>

    {{ form_end(form) }}
{% endblock content %}
