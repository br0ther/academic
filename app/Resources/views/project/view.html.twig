{% extends "layout.html.twig" %}

{% block head_style %}
    {{ parent() }}
{% endblock %}

{% block title %}
    Project information
{% endblock %}

{% block content %}
    <div class="form-horizontal">
        <fieldset>
            <legend>Project information</legend>
            <div class="form-group">
                <h3 class="col-sm-12">{{ project.getTitle() }}</h3>
            </div>
            <div class="form-group">
                <label class="col-sm-3">Summary</label>
                <div class="col-sm-9">{{ project.summary | nl2br }}</div>
            </div>
            <div class="form-group">
                <label class="col-sm-3">Members</label>
                <div class="col-sm-9">{{ members }}</div>
            </div>
            <div class="form-group">
                <div class="col-sm-9">
                    <a href="{{ path('project_edit', {'id': project.id}) }}" class="btn btn-info" role="button">
                        Edit
                    </a>
                </div>
            </div>
        </fieldset>
    </div>
{% endblock content %}
